@using TMDT.Models
@using PagedList.Mvc
@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "sanphantheonsx";
    Layout = "~/Views/Shared/_LayoutKhongTen.cshtml";
}

<section class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <h4 class="title text-center">
                <span class="pull-left"><span class="text"><span class="line">SẢN PHẨM THEO NHÀ SẢN XUẤT: @ViewBag.TenNSX</span></span></span>
            </h4>

            <div class="row">
                @foreach (SanPham item in Model)
                {
                    <div class="col-md-4 col-sm-12">
                        <a class="item-name" href="/r/@item.NSX.Loai.LoaiAlias/@item.NSX.NSXAlias/@item.SanPhamAlias">
                            <div class="box-item">
                                <div class="img-thumbnail">
                                    <img src="@Url.Content("~/Images/SanPham/" + item.HinhAnh)" />
                                </div>
                                <div class="info">
                                    <p>@item.TenSanPham</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>


    @Html.PagedListPager(Model, page => Url.Action("sanphantheonsx", new { page, idnsx = Model[0].IDNSX}))
</section>

