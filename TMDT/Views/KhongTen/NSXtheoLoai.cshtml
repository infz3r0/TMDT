@using TMDT.Models
@using PagedList.Mvc
@model PagedList.IPagedList<NSX>

@{
    ViewBag.Title = "NSXtheoLoai";
    Layout = "~/Views/Shared/_LayoutKhongTen.cshtml";
}
<section class="container">
    <div class="row justify-content-center">
        <div class="col-12">
            <h4 class="title text-center">
                <span class="pull-left"><span class="text"><span class="line">NHÀ SẢN XUẤT</span></span></span>
            </h4>

            <div class="row">
                @foreach (NSX item in Model)
                {
                    <div class="col-md-4 col-sm-12">
                        <a class="item-name" href="/r/@item.Loai.LoaiAlias/@item.NSXAlias">
                            <div class="box-item">
                                <div class="img-thumbnail">
                                    <img src="@Url.Content("~/Images/NSX/" + item.HinhAnh)" />
                                </div>
                                <div class="info">
                                    <p>@item.TenNSX</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>


    @Html.PagedListPager(Model, page => Url.Action("NSXtheoLoai", new { page, loaiAlias = Model[0].Loai.LoaiAlias }))
</section>

