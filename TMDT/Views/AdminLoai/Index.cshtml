@using PagedList.Mvc
@model PagedList.IPagedList<TMDT.Models.Loai>
@{
    /**/

    ViewBag.Title = "Loại";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    ViewBag.Name = "loại";
    ViewBag.ModelName = "Loai";
}
@helper GetName(string name)
{
    @String.Format("Ten{0}", name)
}
<h2 style="text-align:center">@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-outline-success btn-create" })
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th class="cell-center-middle">
                    Tên loại
                </th>
                <th class="cell-center-middle">
                    Số lượng
                </th>
                <th class="cell-center-middle">
                    Nhóm
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="cell-center-middle">
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td class="cell-center-middle">
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td class="cell-center-middle">
                        @Html.DisplayFor(modelItem => item.Nhom.TenNhom)
                    </td>
                    <td style="vertical-align:middle">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDLoai }, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDLoai }, new { @class = "btn btn-outline-info" })
                        <a id="deleteItem" class="deleteItem btn btn-danger" data-target="#basic" data-toggle="modal" data-path="@item.IDLoai" href="#">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div class="modal fade" id="basic" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Xác nhận xóa</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa @ViewBag.Name này?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", "AdminLoai", new { page = Request.Params["page"] }, FormMethod.Post))
                {
                    <input type="hidden" name="id" id="deleteID" value="" />
                    <input type="submit" class="btn btn-danger btn-ok" value="Đồng ý xóa" />
                }
                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.IsError == true)
{
    <!-- Modal -->
    <div class="modal fade" id="errorModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Lỗi</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body modal-body-custom">
                    <div class="alert alert-danger">
                        @ViewBag.ErrorBody
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}
