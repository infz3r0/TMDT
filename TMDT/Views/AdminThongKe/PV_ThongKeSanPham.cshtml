@using TMDT.Models;
@model List<V_ThongKeSanPham>
<div class="content-table">
    <h4 class="title">
        @ViewBag.Take Sản phẩm bán nhiều nhất
    </h4>
    <h5 class="title">
        Tháng @ViewBag.Month/@ViewBag.Year
    </h5>
    <div class="table-responsive table-statistic">
        <table class="table table-bordered table-sm">
            <thead class="thead-light">
                <tr>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>
                        Tổng số lượng
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (V_ThongKeSanPham item in Model)
                {
                    <tr>
                        <td>
                            @item.TenSanPham
                        </td>
                        <td>
                            @item.TongSoLuong
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<canvas id="SanPhamChart" width="400" height="400"></canvas>
@Scripts.Render("~/bundles/chartjs")
<script>
    var ctx = document.getElementById("SanPhamChart");
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(ViewBag.List_labels),
            datasets: [{
                label: 'Tổng số lượng',
                data: @Html.Raw(ViewBag.List_data),
                backgroundColor: [
                    "rgba(255, 99, 132, 0.2)",
                    "rgba(255, 159, 64, 0.2)",
                    "rgba(255, 205, 86, 0.2)",
                    "rgba(75, 192, 192, 0.2)",
                    "rgba(54, 162, 235, 0.2)",
                    "rgba(153, 102, 255, 0.2)",
                    "rgba(201, 203, 207, 0.2)"
                ],
                borderColor: [
                    "rgba(255, 99, 132, 1)",
                    "rgba(255, 159, 64, 1)",
                    "rgba(255, 205, 86, 1)",
                    "rgba(75, 192, 192, 1)",
                    "rgba(54, 162, 235, 1)",
                    "rgba(153, 102, 255, 1)",
                    "rgba(201, 203, 207, 1)"
                ],
                borderWidth: 1
            }]
        },
        options: {
            reponsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: @ViewBag.Take + ' sản phẩm bán nhiều nhất tháng ' + @ViewBag.Month + '/' + @ViewBag.Year,
                fontSize: 24
            },
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>